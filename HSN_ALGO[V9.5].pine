            hi_pos = getHighOffset(array.get(majorBoxLineRef,x))
            lo_pos = getLowOffset(array.get(majorBoxLineRef,x))
            qq = 0.0
            if(array.get(majorBoxLineType,x)==0 and lo_price <= line_price)
                if not array.get(Crossed,x)
